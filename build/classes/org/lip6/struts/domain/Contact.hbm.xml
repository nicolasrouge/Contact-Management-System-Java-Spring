<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.lip6.struts.domain">

<class name="Contact" table="CONTACT" >

		<id name="id_contact" type="long" column="id_contact">
			<generator class="increment" />
		</id>
		
		<version name="version" access="field" column="VERSION"/>

		<property name="lastname">
			<column name="lastname"></column>
		</property>

		<property name="firstname">
			<column name="firstname"></column>
		</property>

		<property name="email">
			<column name="email"></column>
		</property>
  	 
		<!-- grace à unique = null, on obtient 'one-to-one' -->
		<many-to-one name="address" 
			column="id_address" 
			unique="true" 
			not-null="true"
			lazy="false"/>
			
		<!-- pour un contact on a 0 ou n numéros -->
		<set name="phones" inverse="true" cascade="all" lazy="false" >
			<key column="id_contact"/>
			<one-to-many 
			class="PhoneNumber" />
		</set>
		
		<!-- pour un contact on a 0 ou n groupes -->
		<set name="groups" table="CONTACT_GROUP" inverse="true" cascade="all" lazy="false" >
			<key column="id_contact"/>
			<many-to-many class="ContactGroup" column="id_group"/>
		</set>
		
		<joined-subclass name="Entreprise" table="ENTREPRISE">
			<key column="id_contact"/>
			<property name="num_siret" type="long" column="num_siret"/>
		</joined-subclass>

	</class>
	
</hibernate-mapping>